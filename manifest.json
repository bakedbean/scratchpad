{
  "manifest_version": 2,
  "name": "Scratchpad",
  "version": "1.4",
  "description": "A synced scratchpad for quick notes that sync across your Firefox devices",

  "browser_specific_settings": {
    "gecko": {
      "id": "scratchpad@eben.local",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "48": "icons/scratchpad-48.png"
    },
    "default_title": "Open Scratchpad"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "48": "icons/scratchpad-48.png",
    "96": "icons/scratchpad-96.png"
  }
}
